    %meta{ name: 'description', content: 'Photography by Ivan Ukhov' }
    %meta{ property: 'og:url', content: 'http://ivanukhov.com' }
    %meta{ property: 'og:title', content: 'Ivan Ukhov' }
    %meta{ property: 'og:type', content: 'profile' }
    %meta{ property: 'og:description', content: 'Photography by Ivan Ukhov' }
    %meta{ property: 'profile:first_name', content: 'Ivan' }
    %meta{ property: 'profile:last_name', content: 'Ukhov' }
