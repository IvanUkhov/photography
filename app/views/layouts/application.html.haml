    %link{ href: '/favicon.png', rel: 'icon', type: 'image/png' }
    %script{ type: 'text/javascript', src:'//use.typekit.net/sfh6bkj.js' }
    %script{ type: 'text/javascript' }= 'try{Typekit.load();}catch(e){}'
